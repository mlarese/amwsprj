            h5.m0 Amazon UK
          .col-xs-4
            button.btn.btn-labeled(type='button', ng-click="dashboardCtrl.toggleDataFeed('amazon-uk')", ng-class="dashboardCtrl.marketplacesStatus['amazon-uk'] ? 'btn-success' : 'btn-warning'")
