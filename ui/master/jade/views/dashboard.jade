      a(href='#/app/amazon/amazon-uk/settings').panel-footer.bg-gray-dark.bt0.clearfix.btn-block
        span.pull-left Visualizza la configurazione
        span.pull-right
          em.fa.fa-chevron-circle-right
    // END widget

