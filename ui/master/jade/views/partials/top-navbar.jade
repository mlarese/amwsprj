// START Top Navbar
nav.navbar.topnavbar(role='navigation')
    // START navbar header
    .navbar-header
      a.navbar-brand(href='#/app/dashboard')
        .brand-logo
          img.img-responsive(src="app/img/logo.svg", alt="OIR Logo")
        .brand-logo-collapsed
          img.img-responsive(src="app/img/logo-single.svg", alt="OIR Logo")
    // END navbar header

    // START Nav wrapper
    .nav-wrapper
      // START Left navbar
      ul.nav.navbar-nav
        li
          // Button used to collapse the left sidebar. Only visible on tablet and desktops
          a(href='', trigger-resize="", ng-click="app.layout.isCollapsed = !app.layout.isCollapsed", ng-if="!app.layout.isCollapsedText").hidden-xs
            em.fa.fa-navicon
          // Button to show/hide the sidebar on mobile. Visible on mobile only.
          a(href='', ng-click="app.asideToggled = !app.asideToggled").visible-xs.sidebar-toggle
            em.fa.fa-navicon
        //li
          // Button used to collapse the left sidebar. Only visible on tablet and desktops
          a(href='', ng-click="toggleUserBlock()").hidden-xs
            em.fa.fa-user
        li
          // Button used to collapse the left sidebar. Only visible on tablet and desktops
          a(href='', ng-click="logout()")
            em.fa.fa-sign-out
      // END Left navbar

      // START Right Navbar
      ul.nav.navbar-nav.navbar-right
        // Fullscreen (only desktops)
        li.visible-lg
          a(href='', toggle-fullscreen)
            em.fa.fa-expand
        // START Offsidebar button
        //li
          a(href='', ng-click="app.offsidebarOpen = !app.offsidebarOpen")
            em.icon-globe
        // END Offsidebar menu
      // END Right Navbar
    // END Nav wrapper

// END Top Navbar